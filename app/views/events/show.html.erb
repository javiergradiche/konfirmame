<%- model_class = Event -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:recurring_rule) %>:</strong></dt>
  <dd><%= @event.recurring_rule %></dd>
  <dt><strong><%= model_class.human_attribute_name(:start_date) %>:</strong></dt>
  <dd><%= @event.start_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @event.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:aforo) %>:</strong></dt>
  <dd><%= @event.aforo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:state) %>:</strong></dt>
  <dd><%= @event.state %></dd>
  <dt><strong><%= model_class.human_attribute_name(:first_call) %>:</strong></dt>
  <dd><%= @event.first_call %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last_call) %>:</strong></dt>
  <dd><%= @event.last_call %></dd>
  <dt><strong><%= model_class.human_attribute_name(:call_hour) %>:</strong></dt>
  <dd><%= @event.call_hour %></dd>
  <dt><strong><%= model_class.human_attribute_name(:rush_start) %>:</strong></dt>
  <dd><%= @event.rush_start %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              events_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_event_path(@event), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              event_path(@event),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
