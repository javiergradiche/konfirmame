<%- model_class = Notification -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:event_id) %>:</strong></dt>
  <dd><%= @notification.event_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:event_occurrence_id) %>:</strong></dt>
  <dd><%= @notification.event_occurrence_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @notification.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:state) %>:</strong></dt>
  <dd><%= @notification.state %></dd>
  <dt><strong><%= model_class.human_attribute_name(:comment) %>:</strong></dt>
  <dd><%= @notification.comment %></dd>
  <dt><strong><%= model_class.human_attribute_name(:start_datetime) %>:</strong></dt>
  <dd><%= @notification.start_datetime %></dd>
  <dt><strong><%= model_class.human_attribute_name(:end_datetime) %>:</strong></dt>
  <dd><%= @notification.end_datetime %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last_shipping) %>:</strong></dt>
  <dd><%= @notification.last_shipping %></dd>
  <dt><strong><%= model_class.human_attribute_name(:rush_start) %>:</strong></dt>
  <dd><%= @notification.rush_start %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              notifications_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_notification_path(@notification), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              notification_path(@notification),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
