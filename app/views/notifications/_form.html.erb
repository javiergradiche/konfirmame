<%= form_for @notification, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :event_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :event_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :event_occurrence_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :event_occurrence_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :user_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :user_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :state, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :state, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :comment, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :comment, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :start_datetime, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :start_datetime, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :end_datetime, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :end_datetime, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :last_shipping, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :last_shipping, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :rush_start, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :rush_start, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                notifications_path, :class => 'btn' %>
  </div>
<% end %>
